@model IEnumerable<University.Models.Student>

@{
    ViewBag.Title = "Index";
}

<h2>Index WITH Stored Procedure</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<form class="form-horizontal">
    <div class="form-group">
        <label>From Last Name</label>
        <input type="text" class="form-control" id="lastname" name="lastname" placeholder="Type Last Name">
    </div>
    <div class="form-group">
        <label>From Date</label>
        <input type="date" class="form-control" id="dateFrom" name="dateFrom" placeholder="">
    </div>
    <div class="form-group">
        <label>To Date</label>
        <input type="date" class="form-control" id="dateTo" name="dateTo" placeholder="">
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-success">Search</button>
    </div>
    
</form>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EnrollmentDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EnrollmentDate)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.StudentID }) |
            @Html.ActionLink("Details", "Details", new { id=item.StudentID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.StudentID })
        </td>
    </tr>
}

</table>
